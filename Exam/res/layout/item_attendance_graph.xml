<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_normal"
    android:orientation="vertical"
    android:padding="@dimen/normal_padding" >

    <TextView
        android:id="@+id/tv_attendance_graph_create_time"
        style="@style/TimeTipsUI" />

    <LinearLayout
        android:id="@+id/layout_attendance_graph_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20.0dip"
        android:orientation="horizontal"
        android:paddingBottom="10.0dip"
        android:paddingLeft="10.0dip"
        android:paddingRight="10.0dip"
        android:paddingTop="15dp" >
		
         <ImageView 
             android:id="@+id/iv_attendance_graph_photo" 
             android:layout_width="wrap_content"
    		 android:layout_height="wrap_content"/>
        
        <TextView
            android:id="@+id/tv_attendance_graph_address"
            android:layout_width="match_parent"
            android:layout_height="80.0dip"
            android:textColor="@color/tips_text"
            android:textSize="@dimen/small_text" />

        <View
            style="@style/LineVertical"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip" />
        
    </LinearLayout>

</LinearLayout>