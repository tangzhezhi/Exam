<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_normal"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_index_banner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/index_banner_height"
                android:scaleType="fitXY"
                android:src="@drawable/index_banner" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/layout_attendance"
                    style="@style/ListItem"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/iv_attendance"
                        style="@style/ListItemIcon"
                        android:src="@drawable/index_attendance" />

                    <TextView
                        style="@style/ListItemText"
                        android:layout_toRightOf="@id/iv_attendance"
                        android:text="@string/attendance" />

                    <ImageView style="@style/ListItemArrow" />
                </RelativeLayout>

                <View
                    style="@style/ListDivider"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/layout_notice"
                    style="@style/ListItem"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/iv_notice"
                        style="@style/ListItemIcon"
                        android:src="@drawable/index_notice" />

                    <TextView
                        style="@style/ListItemText"
                        android:layout_toRightOf="@id/iv_notice"
                        android:text="@string/notice" />

                    <ImageView style="@style/ListItemArrow" />
                </RelativeLayout>

                <View
                    style="@style/ListDivider"
                    android:visibility="gone" />

                <RelativeLayout
                    android:id="@+id/layout_day_task"
                    style="@style/ListItem"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/iv_day_task"
                        style="@style/ListItemIcon"
                        android:src="@drawable/index_notice" />

                    <TextView
                        style="@style/ListItemText"
                        android:layout_toRightOf="@id/iv_day_task"
                        android:text="@string/day_task" />

                    <ImageView style="@style/ListItemArrow" />
                </RelativeLayout>

                <View
                    style="@style/ListDivider"
                    android:visibility="gone" />
				
                <RelativeLayout
                    android:id="@+id/layout_client_manager"
                    style="@style/ListItem"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/iv_client_manager"
                        style="@style/ListItemIcon"
                        android:src="@drawable/index_notice" />

                    <TextView
                        style="@style/ListItemText"
                        android:layout_toRightOf="@id/iv_client_manager"
                        android:text="@string/client_manager" />

                    <ImageView style="@style/ListItemArrow" />
                </RelativeLayout>

                <View
                    style="@style/ListDivider"
                    android:visibility="gone" />
                
                
                 <RelativeLayout
                    android:id="@+id/layout_video"
                    style="@style/ListItem"
                    android:visibility="visible" >

                    <ImageView
                        android:id="@+id/iv_video"
                        style="@style/ListItemIcon"
                        android:src="@drawable/index_notice" />

                    <TextView
                        style="@style/ListItemText"
                        android:layout_toRightOf="@id/iv_video"
                        android:text="@string/video_resource" />

                    <ImageView style="@style/ListItemArrow" />
                </RelativeLayout>

                <View
                    style="@style/ListDivider"
                    android:visibility="gone" />
                
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="20.0dip" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>